
# Supabase Configuration (Required)
SUPABASE_URL=your-supabase-project-url
SUPABASE_SERVICE_KEY=your-supabase-service-role-key

# CORS Configuration
# Comma-separated list of allowed origins (Required)
# Be sure to include the exact origin of your frontend, including any subdomains
CORS_ORIGIN=https://your-frontend-domain.com,https://localhost:3000

# For a Lovable project, use something like:
# CORS_ORIGIN=https://your-project-id.lovableproject.com

# Server Configuration
PORT=3000

# Optional: Deployment Environment 
NODE_ENV=production

# Timeout Configuration
# Maximum time in milliseconds for PDF generation (Default: 60000)
PDF_GENERATION_TIMEOUT=120000

# Maximum time in milliseconds for image processing (Default: 30000)
IMAGE_PROCESSING_TIMEOUT=60000

# Maximum time in milliseconds for the entire request (Default: 120000)
REQUEST_TIMEOUT=180000

# Image Optimization
# Whether to automatically optimize images for better PDF performance
OPTIMIZE_IMAGES=true

# Maximum width for images in PDFs (in pixels)
MAX_IMAGE_WIDTH=800

# Error Handling
# Number of automatic retries for failed PDF generations (Default: 2)
MAX_GENERATION_RETRIES=3

# Debug mode for verbose logging (true/false)
DEBUG_MODE=false

# Health Check
# How often to perform self-diagnostics in milliseconds (Default: 300000 - 5 minutes)
HEALTH_CHECK_INTERVAL=300000
